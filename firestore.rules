rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
     match /matchmaking-rooms/{room} {
     	allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.host;
      allow update: if request.auth != null && request.auth.uid == resource.data.host;

      match /queue {
        allow update: if request.auth.uid != null && 
        	request.resource.data.queue.hasAny([request.auth.uid]) == false;
      }
    }

    match /game-rooms/{room} {
    	allow write: if request.auth != null;
      allow read: if request.auth != null;
    }
    
    match /user-public-infos/{uid} {
    	allow create: if request.auth != null;
      allow update: if request.auth.uid == uid;
      allow read: if request.auth != null;
    }
  }
}